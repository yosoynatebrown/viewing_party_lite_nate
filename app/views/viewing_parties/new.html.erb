<h1>New Viewing Party</h1>

<%= form_with url: "/dashboard/movies/#{params[:movie_id]}/viewing_parties/", local: true do |f|%>
    <p><%= f.label :duration_in_minutes %>
    <%= f.number_field :length, value: @movie.length %></p>

    <p><%= f.label :date %>
    <%= f.date_select :date %></p>

    <p><%= f.label :start_time %>
    <%= f.time_select :start_time, {ampm: true, ignore_date: true}%></p>

    <% @users.each do |user| %>
    <div id="user-<%= user.id %>" >
    <%= check_box_tag "users[]", user.id %>
    <%= user.name %>
    </div>
    <% end %>
  <%= f.hidden_field :host_id, value: session[:user_id] %>
  <%= f.hidden_field :movie_id, value: params[:movie_id] %>


    <p><%= f.submit "Create Viewing Party"%></p>
<% end %>